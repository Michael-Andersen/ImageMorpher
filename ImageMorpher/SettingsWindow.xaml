<Window x:Class="ImageMorpher.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageMorpher"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="500" Width="400"
        Closing="Settings_Closing">
    <Grid>
        <TabControl>
            <TabItem Header="Control Line Interface">
                <local:ControlLineSettings x:Name="clSettings"/>
            </TabItem>
            <TabItem Header="Morpher">
                <local:MorpherSettings x:Name="morphSettings"/>
            </TabItem>
            <TabItem Header="Morph Viewer">
                <local:MorphViewerSettings x:Name="mvSettings"/>
            </TabItem>
            <TabItem Header="Performance">
                <local:PerformanceSettings x:Name="performSettings"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
